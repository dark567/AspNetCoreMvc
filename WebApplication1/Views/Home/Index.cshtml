@*@model HelloModel*@
@model List<DataLayer.Entityes.Directory>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row>
    <div class="col-md-12">
        @*<h1>@Model.HelloMessage</h1>*@
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <h2> @item.Title</h2>
                    <ul>
                        @if (item.Materials != null)
                        {

                            foreach (var SubItem in item.Materials)
                            {
                                <li>@SubItem.Title</li>
                            }
                        }
                    </ul>
                </li>
            }
        </ul>

    </div>

</div>